page, .container {
    width: 750rpx;
    background: #ffffff;
  }
  
  .groupon-list {
    width: 750rpx;
    height: 100%;
    background: #ffffff;
  }
  
  .groupon-list .item {
    height: 244rpx;
    width: 100%;
    background: #fff;
    margin-bottom: 20rpx;
  }
  
  .groupon-list .img {
    margin-top: 12rpx;
    margin-right: 10rpx;
    float: left;
    width: 220rpx;
    height: 220rpx;
  }
  
  .groupon-list .right {
    float: left;
    height: 244rpx;
    width: 476rpx;
    display: flex;
    flex-flow: row nowrap;
  }
  
  .groupon-list .text {
    display: flex;
    flex-wrap: nowrap;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
    height: 244rpx;
    width: 476rpx;
  }
  
  .groupon-list .name {
    float: left;
    display: block;
    line-height: 42rpx;
    display: -webkit-box;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 2;
   overflow: hidden;
  }
  
  .groupon-list .capsule-tag {
    float: right;
    padding-right: 0rpx;
    padding-top: 8rpx;
  }
  
  .groupon-list .zan-capsule + .zan-capsule {
    margin-left: 6px;
  }
  
  .groupon-list .desc {
    margin-top: 20rpx;
    width: 476rpx;
    display: block;
    line-height: 38rpx;
  }
  
  .groupon-list .price {
    width: 476rpx;
    display: flex;
    line-height: 50rpx;
  }
  .groupon-list .priceTg {
    width: 35%;
  }
  .groupon-list .counterPrice {
    margin-left: 30rpx;
    text-decoration: line-through;
    width: 30%;
  }
  
  .groupon-list .brokerage {
  float: left;
  padding-right: 20rpx;
  padding: 5px;
  line-height: 25rpx;
  background: #e68d08;
  border-radius: 20rpx;
  color: #fff;
  margin: 0rpx;
  text-align: center;
  width: 35%;
  }
  
  .page {
    width: 750rpx;
    height: 108rpx;
    background: #fff;
    margin-bottom: 20rpx;
  }
  
  .page view {
    height: 108rpx;
    width: 50%;
    float: left;
    font-size: 29rpx;
    color: #333;
    text-align: center;
    line-height: 108rpx;
  }
  
  .page .prev {
    border-right: 1px solid #d9d9d9;
  }
  
  .page .disabled {
    color: #ccc;
  }
  

  .group_view_item{
    padding: 40rpx;
  }
  .border_bottom{
    border-bottom: 2rpx solid #cccccc;
  }
  .group_item {
    border-bottom: 2rpx solid #cccccc;
    padding-bottom: 20rpx;
    margin-bottom: 20rpx;
  }
  .group_item:last-child{
    border: none;
    padding-bottom: 0;
    margin-bottom: 0;
  }
  .group_img_top{
    width: 100%;
    height: 400rpx;
  }
  .text_view_namr{
    width: 100%;
    margin-top: 10rpx;
  }
  .text_view_namr .participants_name{
    display: block;
    font-size: 24rpx;
    margin-bottom: 5rpx;
    color: #999999;
  }
  .text_view_namr .name{
    font-size: 32rpx;
    color: #333333;
    font-weight: bold;
    margin-bottom: 10rpx;
    width: 100%;
    display: block;
  }
  .icon_text{
    color: #ec4223;
    font-weight: bold;
    font-size: 24rpx;
  }
  .brokerage_view{
    overflow: hidden;
  }
  .brokerage_view .many_num{
    color: #ec4223;
    font-weight: bold;
    font-size: 40rpx;
    line-height: 52rpx;
    float: left;
  }
  .brokerage_view .brokerage_button{
    background: #85c43f;
    float: right;
    color: #fff;
    font-size: 24rpx;
    padding: 10rpx 20rpx;
    border-radius: 6rpx;
  }
  .group_img_top .imgspicurl{
    width: 100%;
    height: 100%;
  }  